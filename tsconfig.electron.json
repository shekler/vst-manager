{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "main.ts",
    "preload.ts",
    "server/api/vst-operations.ts",
    "server/api/plugins-operations.ts",
    "server/api/settings-operations.ts",
    "server/api/database.ts",
    "server/api/electron-utils.ts"
