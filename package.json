{
  "name": "vst-manager",
  "productName": "VST Manager",
  "version": "0.1.0-alpha",
  "description": "A plugin manager for the audio plugins",
  "main": "main.js",

  "author": "Sven Wolf",
  "scripts": {
    "dev": "nuxi dev",
    "build": "nuxi generate",
    "build:electron": "tsc -p tsconfig.electron.json",

    "start": "electron .",
    "package": "npx tsc -p tsconfig.electron.json && npm run build && electron-forge package",
    "make": "npx tsc -p tsconfig.electron.json && npm run build && electron-forge make",
    "publish": "npx tsc -p tsconfig.electron.json && npm run build && electron-forge publish"
  },
  "dependencies": {
    "@nuxt/devtools": "^2.6.2",
    "@nuxt/image": "^1.10.0",
    "@nuxtjs/tailwindcss": "^7.0.0-beta.0",
    "@tabler/icons-vue": "^3.34.1",
    "electron-squirrel-startup": "^1.0.1",
    "eslint": "^9.31.0",
    "nuxt": "^4.0.1",
    "sqlite3": "^5.1.7",
    "vite": "^6.3.5",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@types/fs-extra": "^11.0.4",
    "electron": "^37.2.4",
    "fs-extra": "^11.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
